<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <gradient android:angle="-90" android:startColor="#7e3bfa" android:endColor="#720fbe"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <solid android:color="#48197b"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <solid android:color="#848484"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />

            <gradient android:angle="-90" android:startColor="#911acc" android:endColor="#7609bf" />
        </shape>
    </item>
</selector>